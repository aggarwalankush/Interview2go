<font color="#0000aa">package</font> Arrays;<br/><br/><font color="#0000aa">import</font> <font color="#00aaaa; text-decoration: underline">java.util.Arrays</font>;<br/><br/><font color="#aaaaaa; font-style: italic">/**</font><br/><font color="#aaaaaa; font-style: italic">&nbsp;&nbsp;*&nbsp;&nbsp;Given&nbsp;&nbsp;an&nbsp;&nbsp;array&nbsp;&nbsp;arr[],&nbsp;&nbsp;find&nbsp;&nbsp;the&nbsp;&nbsp;maximum&nbsp;&nbsp;index&nbsp;&nbsp;difference&nbsp;&nbsp;j&nbsp;&nbsp;â€“&nbsp;&nbsp;i&nbsp;&nbsp;such&nbsp;&nbsp;that&nbsp;&nbsp;arr[j]&nbsp;&nbsp;&gt;&nbsp;&nbsp;arr[i].</font><br/><font color="#aaaaaa; font-style: italic">&nbsp;&nbsp;*/</font><br/><font color="#0000aa">public</font> <font color="#0000aa">class</font> <font color="#00aa00; text-decoration: underline">MaxIndexDifference</font> {<br/><br/>&nbsp;&nbsp;&nbsp;&nbsp;<font color="#0000aa">public</font> <font color="#0000aa">static</font> <font color="#00aaaa">void</font> <font color="#00aa00">main</font>(String[] args) {<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#00aaaa">int</font>[] array1 = {<font color="#009999">10</font>, <font color="#009999">9</font>, <font color="#009999">5</font>, <font color="#009999">6</font>, <font color="#009999">8</font>, <font color="#009999">11</font>, <font color="#009999">10</font>};<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;System.<font color="#1e90ff">out</font>.<font color="#1e90ff">println</font>(<font color="#aa5500">&quot;Input Array: &quot;</font> + Arrays.<font color="#1e90ff">toString</font>(array1));<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;findMaxDiffIndex(array1);<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="#00aaaa">int</font>[] array2 = {<font color="#009999">10</font>, <font color="#009999">9</font>, <font color="#009999">8</font>, <font color="#009999">7</font>, <font color="#009999">6</font>};<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;System.<font color="#1e90ff">out</font>.<font color="#1e90f